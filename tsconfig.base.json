{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nestjs-api/backend/core/application-services": [
        "libs/backend/core/application-services/src/index.ts"
      ],
      "@nestjs-api/backend/core/domain-services": [
        "libs/backend/core/domain-services/src/index.ts"
      ],
      "@nestjs-api/backend/infrastructure": [
        "libs/backend/infrastructure/src/index.ts"
      ],
      "@nestjs-api/backend/shell": ["libs/backend/shell/src/index.ts"],
      "@nestjs-api/backend/ui-rest": ["libs/backend/ui-rest/src/index.ts"],
      "@nestjs-api/shared/domain": ["libs/shared/domain/src/index.ts"],
      "@nestjs-api/shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
